{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": true
        }
      }
    ],
    "assets": [
      "**/*.ejs",
      "**/*.lua"
    ],
    "deleteOutDir": true
  }
}
